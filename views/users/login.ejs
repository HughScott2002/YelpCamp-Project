<% layout('layouts/boilerplate') %> 
<div class="row">
    <div class="col-6 offset-3 mb-3">
        <div class="row">
            <div class="col-6 offset-4">
                <h1 class="mb-1">Login</h1>
            </div>
        </div>
        <form action="/login" method="POST" class="valiform" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text"class="form-control" id = "username" name="username" placeholder="John Doe / Jane Doe" required>
                <div class="invalid-feedback">
                    Not Valid
                </div>
                <div class="valid-feedback">
                    Valid
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id = "password" name="password" required>
                <div class="invalid-feedback">
                    Not Valid
                </div>
                <div class="valid-feedback">
                    Valid
                </div>
            </div>
            
            <div class="container">
                <div class="row row-cols-auto">
                    <div class="col">
                      <button type="submit" class="btn btn-success">Login</button>
                    </div>
                  <div class="col">
                    <a class="btn btn-outline-primary" href="/campgrounds">Back</a>
                    </div>
                    
                </div>
              </div>
        </form>
    </div>
</div>