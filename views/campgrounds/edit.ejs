<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
    <h1 class="text-center display-4">Edit Campground</h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT " method="POST" class="valiform" novalidate enctype="multipart/form-data">
        <div class="mt-5 mb-3">
            <!-- <label for="image" class="form-label">Add Images</label> -->
            <!-- <input type="file" name="image" id="image" multiple> -->
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input class="form-control" name="image" type="file" id="image" accept="image/png, image/jpeg, image/jpg"multiple>
              </div>
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text"class="form-control" id = "title" name="campground[title]" placeholder="Eg. Camp Rock" value="<%= campground.title %>" required>
            <div class="invalid-feedback">
                Not Valid
            </div>
            <div class="valid-feedback">
                Valid
            </div>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">$</span>
                <input type="number" class="form-control" id = "price" name="campground[price]" placeholder="10.00" aria-label="price" value="<%= campground.price %>"required>
                <div class="invalid-feedback">
                    Not Valid
                </div>
                <div class="valid-feedback">
                    Valid
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" required class="form-control" id = "location" name="campground[location]" placeholder="Genborrow Place" value="<%= campground.location %>" required>
            <div class="invalid-feedback">
                Not Valid
            </div>
            <div class="valid-feedback">
                Valid
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" class="form-control" id = "description" name="campground[description]" placeholder="This is an example" required><%= campground.description %></textarea>
            <div class="invalid-feedback">
                Not Valid
            </div>
            <div class="valid-feedback">
                Say it!
            </div>
        </div>

        <div class="mb-3">
            <% campground.images.forEach((img, i)=>{ %>
                <img src=" <%= img.thumbnail %>  " class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="img-<%= i %>" name="deleteImages[]" value="<%=img.filename%>" >
                </div>
                <label for="img-<%= i %>">Delete</label>
           <%  }) %> 
        </div>
        
        <div class="container">
            <div class="row row-cols-auto">
                <div class="col">
                    <button type="submit"  class="btn btn-outline-success">Update</button>
                </div>
              <div class="col">
                <a href="/campgrounds/62a628818284597712abf5fe" class="btn btn-outline-primary mb-3">Back</a>
                </div>
            </div>
          </div>
        
    </form>

    </div>
</div>  

